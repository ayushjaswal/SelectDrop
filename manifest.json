{
  "manifest_version": 3,
  "name": "Selection Color Changer",
  "version": "1.0",
  "action": {
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "content_scripts":
  [
    {
      "matches" : ["*://*/*"],
      "all_frames": true,
      "js": ["content_scripts.js"],
      "run_at": "document_end"
    }
  ]
}
